{
  "private": true,
  "name": "blissue",
  "version": "0.0.0",
  "homepage": "https://louismerlin.github.io/blissue",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "predeploy": "cross-env BLOG_NAME=blissue yarn build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "gh-pages": "^1.2.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0"
  },
  "dependencies": {
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-markdown": "^0.4.0",
    "preact-router": "^2.6.1",
    "universal-ga": "^1.2.0"
  }
}
